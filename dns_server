#!/bin/bash

# Pedir al usuario la dirección IP del servidor DNS y el dominio
read -p "Introduce la dirección IP del servidor DNS: " dns_ip
read -p "Introduce el dominio: " domain

# Configurar el servidor DNS
echo "Configurando servidor DNS..."
echo "nameserver $dns_ip" > /etc/resolv.conf

# Configurar el dominio
echo "Configurando dominio..."
echo "search $domain" >> /etc/resolv.conf

# Agregar la dirección IP del servidor DNS al archivo hosts
echo "Agregando dirección IP del servidor DNS al archivo hosts..."
echo "$dns_ip    www.$domain" >> /etc/hosts

# Reiniciar el servicio de red
echo "Reiniciando el servicio de red..."
systemctl restart network

echo "Configuración completa."

tput sgr0
